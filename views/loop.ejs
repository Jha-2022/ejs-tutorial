
<html>
    <head>
        <title>Here we have a loop</title>
    </head>
    
    <body>

        <h1>
            loop goes like this 
        </h1>

        <p><strong>Car</strong></p>
        <% const products = [
        { name: "Product A", price: 10 },
        { name: "Product B", price: 20 },
        { name: "Product C", price: 30 }
        ]%>

        <% const cars =[
            {name:"Audi R8",year:2006},
            {name:"AMG",year:2014},
            {name:"Thar",year:2010}
        ]%>

        
        <ul>
            <%cars.forEach(cars => {%>
                <li><%=cars.name %>-<%=cars.year%></li>
            <%})%>
        </ul>

        <ul>
            <%products.forEach(products => {%>
            <li><%=products.name %> - $<%=products.price %></li>
            <%});%>    
        </ul>
    
        <ul>
            <% for(let i=1;i<4;i++){ %>
                 <li>item <%=i%> </li>
            <% } %>
        </ul>    
    </body>
</html>